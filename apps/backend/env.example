# Phoenix Template - Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="Phoenix Template"
APP_VERSION="1.0.0"
DEBUG=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/phoenix_template
# Alternative: Use Supabase
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AI Services (uncomment and configure as needed)
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# OPENROUTER_API_KEY=your-openrouter-api-key-here
# LANGSMITH_API_KEY=your-langsmith-api-key-here
# LANGSMITH_PROJECT=your-project-name

# AI Model Configuration
# DEFAULT_CONTENT_MODEL=openai/gpt-4
# DEFAULT_RESEARCH_MODEL=openai/gpt-3.5-turbo
# DEFAULT_TEMPERATURE=0.7
# MAX_CONTENT_LENGTH=2000
